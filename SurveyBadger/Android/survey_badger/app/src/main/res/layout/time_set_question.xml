<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_time_set_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SavageBadger"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <RelativeLayout
        android:layout_below="@id/title_time_set_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:id="@+id/color_bar"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:background="@color/colorAccent"></RelativeLayout>

        <TimePicker
            android:id="@+id/time_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"></TimePicker>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textSize="15dp"
            android:layout_below="@id/time_picker"
            android:layout_alignParentRight="true"
            android:onClick="pickTime"/>

    </RelativeLayout>

</RelativeLayout>