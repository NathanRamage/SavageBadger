<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nathan_pc.location_alarm.MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:id="@+id/location_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Suburb:" />

            <TextView
                android:id="@+id/location_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/location_label"
                android:paddingLeft="@dimen/place_autocomplete_prediction_horizontal_margin"
                android:text="Hello World!" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/post_code_lablel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/location_label"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="Post Code:" />

            <TextView
                android:id="@+id/post_code_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/location_label"
                android:layout_toRightOf="@id/post_code_lablel"
                android:paddingLeft="@dimen/place_autocomplete_prediction_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="Post Code:" />
        </TableRow>
    </TableLayout>
</RelativeLayout>
